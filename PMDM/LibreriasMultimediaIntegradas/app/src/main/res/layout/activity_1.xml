<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Botón Play -->

    <!-- Botón Stop -->

    <!-- Botón Aumentar Volumen -->

    <Button
        android:id="@+id/btn_play_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="104dp"
        android:text="Play"
        app:layout_constraintEnd_toStartOf="@id/btn_stop_audio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_stop_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:text="Stop"
        app:layout_constraintStart_toEndOf="@id/btn_play_audio"
        app:layout_constraintTop_toTopOf="@id/btn_play_audio" />

    <!-- Botón Disminuir Volumen -->

    <!-- Botón Silenciar -->
    <Button
        android:id="@+id/btn_increase_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:text="Aumentar Volumen"
        app:layout_constraintEnd_toStartOf="@id/btn_decrease_volume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_play_audio" />

    <Button
        android:id="@+id/btn_decrease_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Disminuir Volumen"
        app:layout_constraintStart_toEndOf="@id/btn_increase_volume"
        app:layout_constraintTop_toBottomOf="@id/btn_stop_audio" />

    <Button
        android:id="@+id/btn_mute_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Silenciar Audio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_increase_volume" />

</androidx.constraintlayout.widget.ConstraintLayout>
