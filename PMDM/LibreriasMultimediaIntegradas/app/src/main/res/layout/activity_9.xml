<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_play_audio9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reproducir Audio"
            android:layout_marginEnd="16dp"/>
        <Button
            android:id="@+id/btn_stop_audio9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pausar Audio"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_play_video9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reproducir Video"
            android:layout_marginEnd="16dp"/>
        <Button
            android:id="@+id/btn_stop_video9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pausar Video"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_play_sound9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reproducir Sonido"
            android:layout_marginEnd="16dp"/>
        <Button
            android:id="@+id/btn_stop_sound9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pausar Sonido"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_show_gif9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reproducir GIF"
            android:layout_marginEnd="16dp"/>
        <Button
            android:id="@+id/btn_hide_gif9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocultar GIF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/VideoView9" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageView9"
            android:layout_marginTop="16dp" />

    </LinearLayout>


</LinearLayout>
