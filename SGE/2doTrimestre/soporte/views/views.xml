<odoo>
    <data>
        <!-- Lista de incidencias -->
        <record model="ir.ui.view" id="incidencia_list">
            <field name="name">Lista de incidencias</field>
            <field name="model">soporte.incidencia</field>
            <field name="arch" type="xml">
                <tree decoration-success="cerrada == True" decoration-danger="prioridad &lt;7">
                    <field name="titulo"/>
                    <field name="descripcion"/>
                    <field name="prioridad"/>
                    <field name="urgente"/>
                    <field name="archivos_adjuntos"/>
                    <field name="imagen"/>
                    <field name="fecha_creacion"/>
                    <field name="fecha_modificacion"/>
                    <field name="ubicacion_id"/>
                    <field name="cerrada"/>
                </tree>
            </field>
        </record>

        <!-- Lista de incidencias form -->
        <record model="ir.ui.view" id="incidencia_form">
            <field name="name">Nueva incidencia</field>
            <field name="model">soporte.incidencia</field>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Modelo para la gestión de incidencias">
                        <h1>
                            <field name="titulo" placeholder="Introduce el título de la incidencia" nolabel="1"/>
                        </h1>
                        <h2>
                            <field name="descripcion" placeholder="Introduce la descripción de la incidencia"/>
                        </h2>
                        <notebook>
                            <page string="Información básica">             
                                <group>
                                    <field name="prioridad"/>
                                    <field name="ubicacion_id" can_create="True" can_write="True"/>
                                </group>
                            </page>
                            <page string="Adjuntos">               
                                <group>
                                    <separator string="Capturas de la incidencia"/>
                                    <field name="archivos_adjuntos"/>
                                    <field name="imagen" widget="image" class="oe_left" options="{'size':[0,400]}"/>
                                </group>         
                            </page>
                            <page string="Datos técnicos">  
                                <group>
                                    <field name="fecha_creacion"/>
                                    <field name="fecha_modificacion"/>
                                    <separator string="Técnicos trabajando en la incidencia"/>
                                    <field name="tecnico_ids" can_create="True" can_write="True">
                                        <tree>
                                            <field name="nombre"/>
                                        </tree>
                                    </field>
                                </group>         
                            </page>
                            <page string="Más información">  
                                <group>
                                    <field name="urgente"/>
                                    <field name="cerrada" widget="boolean_toggle"/>
                                </group>
                            </page> 
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Lista de ubicaciones -->
        <record model="ir.ui.view" id="ubicacion_list">
            <field name="name">Lista de ubicaciones</field>
            <field name="model">soporte.ubicacion</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nombre"/>
                    <field name="pabellon"/>
                    <field name="planta"/>
                </tree>
            </field>
        </record>

        <!-- Lista de técnicos -->
        <record model="ir.ui.view" id="tecnicos_list">
            <field name="name">Lista de técnicos</field>
            <field name="model">soporte.tecnico</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nombre"/>
                </tree>
            </field>
        </record>

        <!-- Acción de vista para incidencias -->
        <record model="ir.actions.act_window" id="incidencia_action_window">
            <field name="name">Lista de incidencias</field>
            <field name="res_model">soporte.incidencia</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Acción de vista para ubicaciones -->
        <record model="ir.actions.act_window" id="ubicacion_action_window">
            <field name="name">Lista de ubicaciones</field>
            <field name="res_model">soporte.ubicacion</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Acción de vista para técnicos -->
        <record model="ir.actions.act_window" id="tecnico_action_window">
            <field name="name">Lista de técnicos</field>
            <field name="res_model">soporte.tecnico</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menús -->
        <menuitem name="soporte SGE" id="soporte.menu_root"/>
        <menuitem name="Incidencia" id="soporte_incidencia" parent="soporte.menu_root"/>
        <menuitem name="Ubicaciones" id="soporte_ubicaciones" parent="soporte.menu_root"/>
        <menuitem name="Técnicos" id="soporte_tecnicos" parent="soporte.menu_root"/>

        <!-- Submenús -->
        <menuitem name="Mostrar lista" id="soporte_incidencia_list" parent="soporte_incidencia" action="incidencia_action_window"/>
        <menuitem name="Mostrar lista" id="soporte_ubicaciones_list" parent="soporte_ubicaciones" action="ubicacion_action_window"/>
        <menuitem name="Mostrar lista" id="soporte_tecnicos_list" parent="soporte_tecnicos" action="tecnico_action_window"/>
    </data>
</odoo>
