<!-- Top menu item -->

  <menuitem name="Soporte SGE" id="soporte.menu_root"/>

  <!-- menu categories -->

  <menuitem name="Incidencias" id="soporte_incidencias" parent="soporte.menu_root"/>
  <menuitem name="Ubicaciones" id="soporte_ubicaciones" parent="soporte.menu_root"/>
  <menuitem name="Tecnicos" id="soporte_tecnicos" parent="soporte.menu_root"/>

  <!-- actions -->

  <menuitem name="Mostrar lista" id="soporte_incidencias_list" parent="soporte_incidencias"
            action="incidencia_action_window"/>
  <menuitem name="Mostrar lista" id="soporte_ubicaciones_list" parent="soporte_ubicaciones"
            action="ubicacion_action_window"/>
  <menuitem name="Mostrar lista" id="soporte_tecnicos_list" parent="soporte_tecnicos"
            action="tecnico_action_window"/>
  </data>
</odoo>
