    <!-- Top menu item -->

    <menuitem name="soporte SGE" id="soporte.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Incidencia" id="soporte_incidencia" parent="soporte.menu_root"/>

    <!-- actions -->

    <menuitem name="Mostrar lista" id="soporte_incidencia_list" parent="soporte_incidencia"
              action="incidencia_action_window"/>

  </data>
</odoo>
